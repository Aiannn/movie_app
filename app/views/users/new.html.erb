
<div class="login">
<div class="start_form">
  <h1>Create New User</h1>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style="color: red;"><%= error %></p>
    <% end %>
  <% end %>


  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.submit %>
  <% end %>
</div>

