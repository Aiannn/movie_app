<h1> List of Movies </h1>

<table>
    <thead>
        <tr>
            <th> Title: </th>
            <th> Release date: </th>
            <th> Poster: </th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @movies.each do |movie| %>
            <tr>
                <td><%= link_to movie.title, movie_path(movie) %></td>
                <td><%= movie.release_date %></td>
                <td><img src=<%= movie.poster %>></td>
            </tr>
        <% end %> 
    </tbody>
</table>