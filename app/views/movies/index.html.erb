
<br>
<h1> Movies Home </h1>

<h3>Search Movies</h3>
<%= form_tag(movies_search_path, :method => "get") do %>
    <%= search_field_tag :query, params[:query], placeholder: "Search" %>
    <%= button_tag "Submit", :name => nil %>
<% end%>
<br>
<br>


<h3>Top Rated Movies</h3>

<div class="parent">
  
        <% @movies.sort_average.each do |movie| %>
                <div class="inner">
                <p>Title: <%= link_to movie.title, movie_path(movie) %></p>
                <p>Release Date: <%= movie.release_date %></p>
                <p>Poster: <img src="<%="https://image.tmdb.org/t/p/w200#{movie.poster}"%>"></p>
                </div>
        <% end %> 
  
</div>

